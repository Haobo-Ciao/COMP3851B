@page "/community"
@inherits BaseContentPage
@code{
    public Community() : base("Community")
    {

    }
}

<MCol Style="background-color: #ebd8d1">
    <MRow>
        <MCol>
            <MImage Src="@GetImg("part1")" />
        </MCol>
        <MCol>
            <MRow Style="margin: 5vh 0;">
                <p style="font-size:32px;font-weight:600;text-align:center;">
                    @GetTitle("part1")
                </p>
            </MRow>
            <MRow>
                <p style="font-size:28px;font-weight:500;text-align:center;">
                    @GetContents("part1").FirstOrDefault(a => a.Remark != "title")?.Content
                </p>
            </MRow>
        </MCol>
    </MRow>

    <MRow Style="background-color: #BC8E8E;margin-top:5vh;">
        <MRow Style="margin:1vh">
            <p style="text-align: center; color: white; font-weight: 600; font-size: 36px;">load more</p>
        </MRow>
        <MRow Style="margin:1vh">
            <p style="text-align:center;font-size:32px">⇊</p>
        </MRow>
    </MRow>

    <MRow Style="margin: 5vh 0;">
        <p style="text-align: center; font-size: 26px; font-weight: 600; color: #D28686">
            @GetContent("part2")
        </p>
    </MRow>

    <MRow Style="background-color: #F6E8E8;padding:5vh 0;">
        <p style="text-align: center; font-size: 16px;font-weight:600; color: #CD9B9B">
            @GetContent("part3")
        </p>
    </MRow>
    <MRow>
        <MImage Src="@GetImg("part4")" />
        <MRow Style="background-color:white;z-index:10;padding:5vh;">
            <MRow>
                <p style="font-size:28px;font-weight:600;text-align:center;padding:2vh;">@GetTitle("part5")</p>
            </MRow>
            <MRow>
                <p style="font-size: 24px; font-weight: 600; text-align: center;">
                    @GetContents("part5").FirstOrDefault(a=>a.Remark!="title")?.Content
                </p>
            </MRow>
        </MRow>
    </MRow>

    
</MCol>