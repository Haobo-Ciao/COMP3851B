@typeparam TItem where TItem : IDefaultItem<TItem>

<MListItem Href="@Item.Href"
           Exact="@Item.Exact"
           Target="@Item.Target"
           ActiveClass="doc-list-nav--active"
           Class="m-list-item--default">
    @if (Item?.Icon is not null)
    {
        <MListItemIcon>
            <MIcon>@Item.Icon</MIcon>
        </MListItemIcon>
    }

<MListItemContent>
    @{
        var title = Item?.Title;
        if (!string.IsNullOrEmpty(title))
        {
            <MListItemTitle>@title</MListItemTitle>
        }
    }
</MListItemContent>

</MListItem>

@code {

    [Parameter, EditorRequired]
    public TItem Item { get; set; } = default!;

}
